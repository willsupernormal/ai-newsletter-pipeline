# Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# OpenAI API for content evaluation
OPENAI_API_KEY=sk-your_openai_key
OPENAI_MODEL=gpt-4-turbo-preview

# Twitter Scraping Service (choose one)
TWITTER_SERVICE=apify  # Options: "apify" or "rapidapi"

# Apify Configuration (if using Apify)
APIFY_API_TOKEN=your_apify_token
APIFY_ACTOR_ID=apify/twitter-scraper

# RapidAPI Configuration (if using RapidAPI)
RAPIDAPI_KEY=your_rapidapi_key
RAPIDAPI_TWITTER_HOST=twitter-api-service.rapidapi.com

# Gmail Configuration
GMAIL_EMAIL=your_gmail_address
GMAIL_APP_PASSWORD=your_gmail_app_password
GMAIL_IMAP_SERVER=imap.gmail.com
GMAIL_IMAP_PORT=993

# Pipeline Configuration
LOG_LEVEL=INFO
CONTENT_RETENTION_WEEKS=4
MIN_RELEVANCE_SCORE=50
MAX_ARTICLES_PER_SOURCE=50
REQUEST_DELAY_SECONDS=1.0

# RSS Feed Configuration
RSS_REQUEST_TIMEOUT=30
RSS_MAX_RETRIES=3

# Content Processing
CONTENT_EXCERPT_LENGTH=500
DUPLICATE_SIMILARITY_THRESHOLD=0.85

# Twitter Monitoring Accounts
TWITTER_ACCOUNTS=AndrewYNg,karpathy,ylecun,sama,OpenAI,GoogleAI

# Newsletter Processing
NEWSLETTER_LABEL=newsletter
PROCESS_HOURS_BACK=24

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
BATCH_SIZE=100